<%if process == "create"%>
  <% rest_modifier_string = "POST" %>
  <% submit_button_string = "Create Band" %>
  <% action_url = bands_url %>
<% elsif process == "update" %>
  <% rest_modifier_string = "PATCH" %>
  <% submit_button_string = "Update Band" %>
  <% action_url = band_url(@band) %>
<% end %>

<form action="<%= action_url %>" method="POST">
  <%= auth_token %>
  <%= rest_modifier(rest_modifier_string) %>
  <label>
    Band name
    <input type="text" name="band[name]" value="<%= @band.name %>">
  </label>
  <br>
  <input type="submit" value=<%= submit_button_string %>>
</form>